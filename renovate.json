{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "pinDigests": true,
  "enabledManagers": [
    "dockerfile",
    "github-actions",
    "regex"
  ],
  "regexManagers": [
    {
      "fileMatch": [".github/workflows/release.yaml"],
      "matchStrings": [
        "loeken/sonarr:(?<currentValue>\\d+\\.\\d+\\.\\d+-nightly)"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "linuxserver/sonarr",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
